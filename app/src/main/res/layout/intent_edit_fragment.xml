<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="viewModel"
                type="com.simprints.simprintsidtester.fragments.edit.IntentEditViewModel"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/intent_edit_delete"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:layout_height="wrap_content"
                        android:onClick="@{viewModel::userDidWantToDeleteIntent}"/>

                <Button
                        android:id="@+id/intent_edit_execute"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Execute"
                        android:layout_height="wrap_content"
                        android:onClick="@{viewModel::userDidWantToExecuteIntent}"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/intent_edit_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@{viewModel.intent.id}"
                    android:layout_marginTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/intent_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:maxLines="1"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="@{viewModel.intent.name}"
                        android:onTextChanged="@{(text, s, b, c) -> viewModel.onIntentNameChange(text)}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                        android:id="@+id/intent_edit_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Action"
                        android:maxLines="1"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="@{viewModel.intent.action}"
                        android:onTextChanged="@{(text, s, b, c) -> viewModel.onIntentActionChange(text)}"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/intent_edit_extras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/intent_edit_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars = "vertical"/>

        </LinearLayout>
    </LinearLayout>
</layout>