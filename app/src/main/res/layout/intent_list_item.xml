<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="position"
                type="java.lang.Integer"/>

        <variable
                name="viewModel"
                type="com.simprints.simprintsidtester.fragments.list.IntentListViewModel"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:onClick="@{() -> viewModel.userDidWantToCreateANewIntent(position)}">

        <TextView
                android:id="@+id/intent_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@{viewModel.getSimprintsIntentAt(position).name}"
                android:textAppearance="?attr/textAppearanceListItem"/>

        <ImageButton
                android:id="@+id/intent_duplicate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> viewModel.userDidWantToDuplicateIntent(position)}"
                android:textAppearance="?attr/textAppearanceListItem"/>
    </LinearLayout>
</layout>